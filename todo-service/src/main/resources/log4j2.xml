<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">
    <Appenders>
        <RollingFile name = "LogToFile" fileName = "logs/tasks_todo_service.log"
                     filePattern = "logs/task.%d{yyyy-MM-dd}.log"
                     ignoreExceptions = "false">
            <PatternLayout pattern = "%d %-5p %c: %m%n"/>
            <TimeBasedTriggeringPolicy />
            <DeafultRolloverStrategy>
                <Delete basePath="logs" maxDepth="2">
                    <IfFileName glob="tasks_todo_service.*.log" />
                    <IfLastModified age="7d" />
                </Delete>
            </DeafultRolloverStrategy>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="LogToFile"/>
        </Root>
    </Loggers>
</Configuration>